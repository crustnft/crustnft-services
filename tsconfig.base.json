{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "esModuleInterop": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@crustnft-explore/util-config-api": [
        "libs/util-config-api/src/index.ts"
      ],
      "@crustnft-explore/util-entity": ["libs/util-entity/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
